<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PRN221_Project</title>
    <link rel="stylesheet" href="~/css/admin/nucleo-icons.css" />
    <link rel="stylesheet" href="~/css/admin/nucleo-svg.css" />
    <link rel="stylesheet" href="~/css/admin/material-dashboard.css" />
</head>
<body class="g-sidenav-show  bg-gray-200">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 bg-gradient-dark" id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand m-0" href=" https://demos.creative-tim.com/material-dashboard/pages/dashboard " target="_blank">
               @* <img src="../assets/img/logo-ct.png" class="navbar-brand-img h-100" alt="main_logo">*@
                <span class="ms-1 font-weight-bold text-white">Dashboard</span>
            </a>
        </div>
        <hr class="horizontal light mt-0 mb-2">
        <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white " href="../pages/dashboard.html">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">Manager User</i>
                        </div>                       
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white active bg-gradient-primary" href="../pages/tables.html">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">Manager Movie</i>
                        </div>                       
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white " href="../pages/billing.html">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">Manager revenue</i>
                        </div>                       
                    </a>
                </li>
            </ul>
        </div>       
    </aside>
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg "> 
      @RenderBody()
    </main>
   
    <!--   Core JS Files   -->
    <script src="~/js/admin/bootstrap.min.js"></script>
    <script src="~/js/admin/perfect-scrollbar.min.js"></script>
    <script src="~/js/admin/popper.min.js"></script>
    <script src="~/js/admin/smooth-scrollbar.min.js"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
          var options = {
            damping: '0.5'
          }
          Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script src="/js/admin/material-dashboard.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
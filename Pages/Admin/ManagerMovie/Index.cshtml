@page
@model PRN221_Project.Pages.Admin.ManagerMovie.IndexModel
@{
}
<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3" style="background: cadetblue;box-shadow:0 4px 20px 0 rgba(0, 0, 0, 0.14), 0 7px 10px -5px rgba(0, 0, 0, 0.5) !important">
                    <h6 class="text-white text-capitalize ps-3">All Movies</h6>
                </div>
                <button class="btn btn-success" style="float:right;bottom:-35px" data-bs-toggle="modal" data-bs-target="#addMovieModal">Add New Movie</button>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Movie</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Genre</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Release Date</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                                <th class="text-secondary opacity-7 text-end" style="width:10px"></th>
                                <th class="text-secondary opacity-7 text-end" style="width:10px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.movies)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@m.Title</h6>
                                                <p class="text-xs text-secondary mb-0">@m.Director.Name</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@m.Genre.Name</p>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@m.ReleaseDate</span>
                                    </td>
                                    @if (m.ReleaseDate < DateTime.Now)
                                    {
                                        <td class="align-middle text-center text-sm">
                                            <span class="badge badge-sm bg-gradient-success">Released</span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="align-middle text-center text-sm">
                                            <span class="badge badge-sm bg-gradient-secondary">Upcoming</span>
                                        </td>
                                    }
                                    <td class="align-middle">
                                        <a asp-page="./Edit" asp-route-id="@m.Id" class="btn bg-gradient-info">
                                            Edit
                                        </a>
                                    </td>
                                    <td class="align-middle">
                                        <form method="post" asp-page-handler="Delete">
                                            <input type="hidden" asp-for="@m.Id" name="id" />
                                            <button type="submit" class="btn btn-danger">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@*Modal Add New Movie*@
<div class="modal fade" id="addMovieModal" tabindex="-1" aria-labelledby="addMovieModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMovieModalLabel">Add New Movie</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="AddMovie.Title" for="title" class="form-label">Title</label>
                        <input asp-for="AddMovie.Title" type="text" class="form-control" id="title" name="title">
                    </div>
                    <div class="mb-3">
                        <label asp-for="AddMovie.ReleaseDate" for="releaseDate" class="form-label">Release Date</label>
                        <input asp-for="AddMovie.ReleaseDate" type="date" class="form-control" id="releaseDate" name="releaseDate">
                    </div>
                    <div class="mb-3">
                        <label asp-for="AddMovie.DurationMinutes" for="duration" class="form-label">Duration (minutes)</label>
                        <input asp-for="AddMovie.DurationMinutes" type="number" class="form-control" id="duration" name="duration">
                    </div>
                    <div class="mb-3">
                        <label asp-for="AddMovie.Description" for="description" class="form-label">Description</label>
                        <textarea asp-for="AddMovie.Description" class="form-control" id="description" name="description" rows="3" style="border:1px solid #ced4da"></textarea>
                    </div>
                    <div class="mb-3">
                        <label asp-for="AddMovie.PosterUrl" for="posterUrl" class="form-label">Poster URL</label>
                        <input asp-for="AddMovie.PosterUrl" type="url" class="form-control" id="posterUrl" name="posterUrl">
                    </div>
                    <div class="mb-3">
                        <label asp-for="AddMovie.TrailerUrl" for="trailerUrl" class="form-label">Trailer URL</label>
                        <input asp-for="AddMovie.TrailerUrl" type="url" class="form-control" id="trailerUrl" name="trailerUrl">
                    </div>
                    <div class="mb-3">
                        <label asp-for="AddMovie.GenreId" for="category" class="form-label">Genre</label>
                        <select asp-for="AddMovie.GenreId" class="form-control" id="Genre" name="Genre" style="border:1px solid #ced4da">
                            @foreach (var g in Model.Genres)
                            {
                                <option value="@g.Id">@g.Name</option>
                            }
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <div>
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<style>
    input.form-control {
        border: 1px solid #ced4da; /*  */
    }
</style>



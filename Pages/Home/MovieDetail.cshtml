    <title>Hello, world!</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <style>
        .hero {
            height: 342px;
            margin: 0;
            position: relative;
            overflow: hidden;
            z-index: 1;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }

        .popup {
            display: none;
            /* Thêm các thuộc tính cần thiết cho vị trí và giao diện của popup */
        }

        .hero:before {
            content: '';
            width: 100%;
            height: 100%;
            position: absolute;
            overflow: hidden;
            top: 0;
            left: 0;
            background: url("@Model.backdrop_path");
            filter: brightness(50%);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            z-index: -1;
            transform: skewY(-2.2deg);
            transform-origin: 0 0;
            chrome antialias fix -webkit-backface-visibility: hidden;
        }

        button {
            font-size: 20px;
            margin-left: 20px;
            padding: 10;
            color: white;
            border: none;
            background-color: rgba(255, 255, 255, 0.1); /* Thay đổi giá trị alpha để điều chỉnh độ trong suốt */
        }

        .rating-stars .fas.fa-star.rated {
            color: gold; /* Hoặc màu khác tùy chọn */
            /* Thêm các styles khác cho biểu tượng ngôi sao đã được chọn */
        }

        .rating-stars .fas.fa-star.rated {
            color: gold; /* Hoặc màu khác tùy chọn */
        }

        .rating-stars .fas.fa-star:hover,
        .rating-stars .fas.fa-star.hovered {
            color: gold; /* Màu khác khi hover */
            cursor: pointer;
        }

        .popup-wrapper {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .popup-content {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            max-width: 600px;
            width: 100%;
            text-align: center;
        }

        .video-container {
            position: relative;
        }

            .video-container iframe {
                width: 100%;
            }

        .video-close {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            font-size: 24px;
            color: white;
            z-index: 1;
        }

        .popup-close {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
        }

        .show-popup {
            display: flex;
        }

        i {
            padding: 0
        }
    </style>
</head>
<body>
    <div style="position: relative;">
